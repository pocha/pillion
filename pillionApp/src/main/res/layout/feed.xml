<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/app_layout"
    android:orientation="vertical" >
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:layout_gravity="bottom|center_horizontal">
        
        <org.lucasr.smoothie.AsyncListView xmlns:android="http://schemas.android.com/apk/res/android"
                                   android:id="@+id/listview"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content"
                                   android:scaleType="fitXY"
                                   android:background="#f7f7f7" />
        
    </LinearLayout>
    
    
    <LinearLayout android:orientation="horizontal" 
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#dddddd" >
        
    </LinearLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f8f8f8"
        android:gravity="center"
        android:layout_gravity="bottom|center_horizontal">
        
        
        
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal" 
        android:layout_width="fill_parent"
        android:visibility="gone"
        android:layout_height="3dp"
        android:background="#eeeeee" >
        
    </LinearLayout>
    
    
    
    
    
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f4f4f4"
        android:gravity="center"
        android:visibility="gone"
        android:layout_gravity="bottom|center_horizontal">
        
        
        <TextView
            android:padding="3dp"
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="@string/few_friends"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"/>
        
    </LinearLayout>
    
    <LinearLayout android:orientation="horizontal" 
        android:visibility="gone"
        android:layout_width="fill_parent"
        android:layout_height="3dp"
        android:background="#eeeeee" >
        
    </LinearLayout>
    
    <LinearLayout 
        android:id="@+id/invite_friend_div"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f1f1f1"
        android:gravity="center"
        android:layout_gravity="center">
        
        
        <Button
			    android:id="@+id/load_more_app"
			    android:layout_width="0dp"
			    android:layout_weight="1.3"
			    android:padding="5dp"
		        android:layout_height="wrap_content"
		        android:text="Load More App"
		        android:onClick="loadFreindsAppsBtn"
		        android:drawableLeft="@drawable/reload"
		        android:visibility="gone"
				/>
        
        <Button
			    android:id="@+id/invite_friend"
			    android:layout_width="0dp"
			    android:layout_weight="1"
			    android:layout_height="wrap_content"
		        android:text="+ Add Friends to See Their Apps"
		        android:onClick="inviteFriend"
		        />
        
    </LinearLayout>
    
</LinearLayout>
    
    
    