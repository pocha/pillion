<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.Sherlock.Light">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
    </style>

    <style name="EditTextStyle" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">16sp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ScrollViewStyle" parent="android:Widget.ScrollView">
        <item name="android:padding">10dp</item>
    </style>


    
    <style name="ButtonStyle">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">#ffffff</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_margin">3dp</item>
	    <item name="android:textSize">16sp</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:shadowColor">#000000</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
        <item name="android:background">@drawable/btn_regular</item>
        <item name="android:gravity">center</item>
	</style>
    <style name="FbButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/btn_blue</item>
    </style>

    <style name="DangerButtonStyle" parent="ButtonStyle">
        <item name="android:background">@drawable/btn_red</item>
    </style>


    <style name="TextViewLabel">
        <item name="android:color">#ababab</item>
        <item name="android:textSize">10sp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TextViewLabelDivider">
        <item name="android:background">#ababab</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="TextViewRadioButtonSupport" parent="TextViewLabel">
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
    </style>

    <style name="EditTextDialog" parent="EditTextStyle">
        <item name="android:focusable">false</item>
        <item name="android:cursorVisible">false</item>
    </style>

    <style name="EditTextDialogSmall" parent="EditTextDialog">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="EditTextDialogBig" parent="EditTextDialog">
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TextViewBig">
        <item name="android:textSize">30sp</item>
    </style>

    <color name="BottomButton">#333</color>
    <color name="BottomButtonDisabled">#999</color>

    <style name="Badge">
        <item name="android:textColor">#ddd</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:background">#999</item>
    </style>
    <style name="BadgeRed" parent="Badge">
        <item name="android:background">@drawable/btn_red</item>
    </style>
    <style name="BadgeGreen" parent="Badge">
        <item name="android:background">#ff009f00</item>
    </style>
    <style name="BadgeYellow" parent="Badge">
        <item name="android:background">#fff0f602</item>
        <item name="android:textColor">#444</item>
    </style>



</resources>